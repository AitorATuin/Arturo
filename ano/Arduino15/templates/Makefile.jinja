# +----------------------------------------------------------------------------+
# | BUILD VARIABLES
# +----------------------------------------------------------------------------+
BOARD := {{board.name}}
VERSION_STRING := {{env.version}}

# +----------------------------------------------------------------------------+
# | DIRECTORIES AND CONFIGURATIONS
# +----------------------------------------------------------------------------+
BUILDDIR := {{env.builddir}}/$(BOARD)

# +----------------------------------------------------------------------------+
# | SOURCE
# +----------------------------------------------------------------------------+
C_HEADERS := {arturo.src.headers}

# +----------------------------------------------------------------------------+
# | FLAGS
# +----------------------------------------------------------------------------+
CFLAGS += -Wall \

CXX_FLAGS += \

C_DEBUG_FLAGS := -g \

CXX_DEBUG_FLAGS := -g \

AR_FLAGS := \

# +----------------------------------------------------------------------------+
# | COMMON TARGETS
# +----------------------------------------------------------------------------+
.PHONY: all
all:

.PHONY: debug
debug: CFLAGS += $(C_DEBUG_FLAGS)
debug: CXX_FLAGS += $(CXX_DEBUG_FLAGS)
debug: all


.PHONY: clean
clean: cleandocs
	rm -rf $(BUILDDIR)

# +----------------------------------------------------------------------------+
# | DIRECTORIES AND CONFIGURATIONS
# +----------------------------------------------------------------------------+

include $(BUILDDIR)/Toolchain_{{platform.name}}.mk

include$(BUILDDIR)/MakeHex.mk
