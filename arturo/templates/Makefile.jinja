# +----------------------------------------------------------------------------+
# | BUILD CONFIGURATION
# +----------------------------------------------------------------------------+
ARTURO_VERSION_STRING           := {{env.version}}
PROJECT_NAME                    := {{source.name}}
TARGET_PACKAGE                  := {{preferences.target_package}}
TARGET_PLATFORM                 := {{preferences.target_platform}}
BOARD                           := {{preferences.board}}

# +----------------------------------------------------------------------------+
# | DIRECTORIES AND CONFIGURATIONS
# +----------------------------------------------------------------------------+
DIR_BUILD                       := {{project.builddir}}/$(TARGET_PACKAGE)/$(TARGET_PLATFORM)/$(BOARD)
DIR_BUILD_LIBS                  := $(DIR_BUILD)/libs
DIR_SOURCE                      := {{source.dir}}
DIR_MAKEFILE                    := $(CURDIR)

# +----------------------------------------------------------------------------+
# | MAKEFILE INCLUDES
# +----------------------------------------------------------------------------+
META_MAKE_LIBS                  := $(DIR_BUILD)/{{templates.metamake_libs}}

# +----------------------------------------------------------------------------+
# | TARGETS
# +----------------------------------------------------------------------------+
.PHONY : all
all:
	# Build all the things.

.PHONY : init
init: 
	@echo "This is not a valid target. Did you mean '{{commands.init}}'?"

.PHONY : clean
clean:
	rm -rf $(DIR_BUILD)

$(META_MAKE_LIBS): {{this.filename}}
	{{commands.metamakegen_libs}} {{arguments.path}} $@
	
# optional local overrides
-include local.mk

DIR_MAKEFILE := $(CURDIR)/$(DIR_BUILD)
-include $(META_MAKE_LIBS)
DIR_MAKEFILE := $(CURDIR)
